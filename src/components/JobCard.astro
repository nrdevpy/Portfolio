---
import Skill from "./Skill.astro";
import type { Job } from "../types.d.ts";
interface Props extends Job {}

const { title, skills, link, date } = Astro.props;
---

<article class="mb-section-gap">
    <h3 class="text-lg font-bold mb-2">{title}</h3>
    <span class="block text-sm text-gray-500 mb-2">{date}</span>
    <p class="prose prose-invert mb-4">
        <slot />
    </p>
    {
        skills && (
            <ul class="flex gap-x-2">
                {skills.map((skill) => (
                    <Skill name={skill} />
                ))}
            </ul>
        )
    }
</article>
