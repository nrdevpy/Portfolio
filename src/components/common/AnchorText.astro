---
import type { AnchorTextType } from "@src/types";

type Props = AnchorTextType;

const { href, target } = Astro.props;
---

<a
    class="font-bold lg:hover:text-accent transition-colors transition-duration-custom ease-in-out"
    href={href}
    target={target ? target : "_blank"}
>
    <slot />
</a>
