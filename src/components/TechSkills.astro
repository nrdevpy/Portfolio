    {
        title: "GitHub",
        src: "/assets/logos/github.svg"
    }
];

const { class: className } = Astro.props;
const lang = Astro.preferredLocale;
---

{
    techSkills && (
        <div>
            <H2>{lang === "es" ? "Tecnolog√≠as" : "Skills"}</H2>
            <ul
                class:list={[
                    className,
                    "grid grid-cols-5 lg:grid-cols-4 gap-4 max-w-[16rem]"
                ]}
            >
                {techSkills.map((skill) => (
                    <li>
                        <TechSkill {...skill} />
                    </li>
                ))}
            </ul>
        </div>
    )
}
