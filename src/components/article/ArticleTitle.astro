---
import type { ArticleHeadingType } from "@src/types";
import H3 from "@components/headings/H3.astro";
import LinkIcon from "@components/ui/LinkIcon.astro";
const { title, link } = Astro.props as ArticleHeadingType;
---

{
    link ? (
        <a
            href={link}
            class="flex mb-2 transition-colors ease-in-out group gap-x-1 lg:group-hover:text-accent group-hover:fill-acent fill-white duration-custom"
            target="_blank"
        >
            <H3 title={title} />
            <LinkIcon isExternal goBack={false} />
        </a>
    ) : (
        <H3 title={title} isMargin={true} />
    )
}
