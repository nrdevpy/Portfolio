---
import { Image } from "astro:assets";
import profileImage from "@assets/profile.webp";
import SocialNetworks from "./SocialNetworks.astro";
import Footer from "./common/Footer.astro";
import TechSkills from "./TechSkills.astro";

import { Content as HeaderContent } from "../content/header/en/header.md";
import { Content as HeaderContentES } from "../content/header/es/header.md";
import LangSlider from "./LangSlider.astro";
const { lang } = Astro.props;
---

<div
    class="top-0 left-0 flex-col items-start justify-between lg:h-screen lg:sticky lg:z-10 lg:flex lg:py-8"
>
    <header class="mb-section-gap">
        <div
            class="grid items-center mb-4 lg:grid-cols-header md:grid-cols-2 justify-items-start gap-y-6 gap-x-4"
        >
            <div
                class="md:place-self-start place-self-center flex flex-col gap-y-4 gap-x-2 max-w-[40ch]"
            >
                <h1
                    class="font-bold leading-tight text-center text-balance md:text-start"
                >
                    <span class="text-4xl lg:text-5xl text-accent"
                        >Nelson Rojas</span
                    >
                    <span class="block text-xl lg:text-2xl"
                        >{
                            lang === "es"
                                ? "Desarrollador Frontend"
                                : "Frontend Developer"
                        }</span
                    >
                </h1>
            </div>
            <Image
                transition:name="profileImage"
                src={profileImage}
                alt="Profile"
                class="rounded-full lg:max-w-36 lg:max-h-36 max-w-36 max-h-36 aspect-square sm:row-span-2 place-self-center"
                width={200}
                height={200}
                loading={"eager"}
            />
            <div class="prose prose-invert md:max-w-[30ch]">
                {lang === "es" ? <HeaderContentES /> : <HeaderContent />}
            </div>
            <div
                class="grid grid-cols-2 justify-self-stretch lg:grid-cols-header md:grid-cols-2 sm:grid-cols-header md:col-span-2 gap-x-4"
            >
                <SocialNetworks class:list={["place-self-start"]} />
                <LangSlider
                    class:list={["place-self-end md:place-self-center"]}
                    lang={lang}
                    href={lang === "es" ? "/" : "/es"}
                />
            </div>
        </div>
    </header>
    <div class="max-lg:hidden">
        <TechSkills class:list={["mb-section-gap"]} />
    </div>
    <div class="max-lg:hidden">
        <Footer lang={lang} />
    </div>
</div>

<style></style>
