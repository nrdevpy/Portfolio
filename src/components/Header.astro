---
import { Image } from "astro:assets";
import profileImage from "@assets/profile.webp";
import SocialNetworks from "./SocialNetworks.astro";
import Footer from "./common/Footer.astro";
import TechSkills from "./TechSkills.astro";
---

<div
    class="lg:h-screen lg:sticky top-0 left-0 lg:flex flex-col items-start justify-between lg:py-8"
>
    <header class="mb-section-gap">
        <div class="flex items-center mb-4 gap-x-6">
            <div class="flex flex-col gap-y-4 gap-x-2 max-w-[40ch]">
                <h1 class="font-bold leading-tight text-balance">
                    <span
                        class="sm:text-xl lg:text-4xl md:text-5xl text-2xl text-accent"
                        >Nelson Rojas</span
                    >
                    <span
                        class="sm:text-lg lg:text-2xl md:text-2xl text-xl block"
                        >Frontend Developer</span
                    >
                </h1>
                <p class="prose prose-invert">
                    I build clean, modern, and efficient web solutions that
                    engage users.
                </p>
            </div>
            <Image
                src={profileImage}
                alt="Profile"
                class="lg:max-w-36 lg:max-h-36 md:max-w-36 md:max-h-36 max-w-36 max-h-36 aspect-square rounded-full"
                width={200}
                height={200}
                loading={"eager"}
            />
        </div>
        <SocialNetworks />
    </header>
    <div class="max-lg:hidden">
        <TechSkills class:list={["mb-section-gap"]} />
    </div>
    <div class="max-lg:hidden">
        <Footer />
    </div>
</div>
