---
import Wrapper from "./Wrapper.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
const lang = Astro.preferredLocale;
---

<!doctype html>
<html lang={lang === "es" ? "es" : "en"}>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body
        class="text-white max-lg:py-8 px-4 sm:px-4 lg:px-4 md:px-36 selection:bg-accent selection:text-primary before:block before:fixed before:-inset-80 before:bg-gradient-to-br before:from-secondary before:from-[-75%] before:via-primary before:to-secondary before:to-[175%]"
    >
        <Wrapper>
            <slot />
        </Wrapper>
    </body>
</html>
<style is:global>
    @font-face {
        font-family: "Nunito";
        src: url("./fonts/Nunito-Regular.woff2");
    }

    @font-face {
        font-family: "Nunito Bold";
        src: url("./fonts/Nunito-Bold.woff2");
    }

    html {
        font-family: "Nunito", system-ui, sans-serif;
    }

    strong,
    b,
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-family: "Nunito Bold", system-ui, sans-serif;
    }
</style>
